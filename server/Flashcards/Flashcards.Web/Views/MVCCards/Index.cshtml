@model IEnumerable<Flashcards.Web.Models.Card>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.frontText)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.backText)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FrontImgURL)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BackImgURL)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.frontText)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.backText)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FrontImgURL)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BackImgURL)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
